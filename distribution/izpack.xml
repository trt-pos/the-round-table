<installation version="5.0">
    <info>
        <appname>The Round Table</appname>
        <appversion>2.5.0</appversion>
        <appsubpath>desktop-app</appsubpath>
        <javaversion>22</javaversion>
        <url>https://lebastudios.org</url>
        <requiresjdk>yes</requiresjdk>
        <authors>
            <author name="Borja Castellano" email="borja.castellano@lebastudios.org" />
        </authors>
        <uninstaller write="yes" />
    </info>

    <locale>
        <langpack iso3="es"/>
        <langpack iso3="eng"/>
    </locale>

    <guiprefs width="800" height="600" resizable="no">
        <splash>images/peas_load.gif</splash>
        <laf name="substance">
            <os family="windows" />
            <os family="unix" />
            <param name="variant" value="mist-silver" />
        </laf>
        <laf name="substance">
            <os family="mac" />
            <param name="variant" value="mist-aqua" />
        </laf>
        <modifier key="useHeadingPanel" value="yes" />
    </guiprefs>

    <panels>
        <panel classname="TargetPanel"/>
        <panel classname="PacksPanel"/>
        <panel classname="InstallPanel"/>
        <panel classname="FinishPanel"/>
    </panels>
    
    <packs>
        <pack name="Core Jar" required="yes">
            <description>The core application jar</description>
            <fileset dir="plain" targetdir="${INSTALL_PATH}" override="true"/>
            <parsable targetfile="${INSTALL_PATH}/dektop-app.properties"/>
        </pack>
        <pack name="Launcher bin" required="yes">
            <description>The launcher Rust bin</description>
            <file src="desktop-app/start" targetdir="${INSTALL_PATH}" override="true"/>
        </pack>
    </packs>
</installation>